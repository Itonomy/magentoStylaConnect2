<?xml version="1.0"?>

<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/styla_product/:productId" method="GET">
        <service class="Styla\Connect2\Api\ProductRepositoryInterface" method="getById"/>
        <resources>
            <resource ref="Magento_Catalog::products"/>
        </resources>
    </route>
    
    <route url="/V1/styla_product" method="GET">
        <service class="Styla\Connect2\Api\ProductRepositoryInterface" method="getList"/>
        <resources>
            <resource ref="Magento_Catalog::products"/>
        </resources>
    </route>
    
    <route url="/V1/styla_product_test" method="GET">
        <service class="Styla\Connect2\Api\ProductRepositoryInterface" method="test"/>
        <resources>
            <resource ref="Magento_Catalog::products"/>
        </resources>
    </route>
</routes>